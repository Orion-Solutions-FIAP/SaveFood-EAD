@model Product

<div asp-validation-summary="ModelOnly"></div>

<div class="form-group">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="validation"></span>
</div>

<div class="form-group">
    <label asp-for="ExpirationDate"></label>
    <input asp-for="ExpirationDate" class="form-control" />
    <span asp-validation-for="ExpirationDate" class="validation"></span>
</div>

<div class="form-group">
    <label asp-for="Amount"></label>
    <input asp-for="Amount" class="form-control" />
    <span asp-validation-for="Amount" class="validation"></span>
</div>

<div class="form-group">
    <label asp-for="StorageId"></label>
    <div class="input-group">
        <select class="form-control select-input" asp-for="StorageId" asp-items="ViewBag.Storages">
            <option value="">Selecione</option>
        </select>
        <div class="input-group-append">
            <a asp-action="Create" asp-controller="Storage" class="btn btn-primary create-link"><i class="bi bi-plus-circle"></i></a>
        </div>
    </div>
    <span asp-validation-for="StorageId" class="validation"></span>
</div>

<div class="form-group">
    <label asp-for="CategoryId"></label>
    <div class="input-group">
        <select class="form-control select-input" asp-for="CategoryId" asp-items="ViewBag.Categories">
            <option value="">Selecione</option>
        </select>
        <div class="input-group-append">
            <a asp-action="Create" asp-controller="Category" class="btn btn-primary create-link"><i class="bi bi-plus-circle"></i></a>
        </div>
    </div>
    <span asp-validation-for="CategoryId" class="validation"></span>
</div>