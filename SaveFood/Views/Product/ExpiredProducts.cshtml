@model IList<Product>

@{
    ViewData["Title"] = "Expired Products";
}

<h1>Produtos Vencidos</h1>

<table class="table" style="text-align: center;">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Quantidade</th>
            <th>Data de Vencimento</th>
            <th>Status</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Amount</td>
                <td>@item.ExpirationDate</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"
                       class="btn btn-sm btn-primary" data-toggle="tooltip" data-placement="top"
                       data-original-title="Editar">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <button type="button" onclick="productId.value = @item.Id" class="btn btn-sm btn-danger" data-toggle="modal" data-target="#exampleModal"
                            data-placement="top" title="" data-original-title="Remover">
                        <i class="bi bi-x"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Remover filme</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Deseja realmente remover o filme?
            </div>
            <div class="modal-footer">
                <form asp-action="Delete">
                    <input type="hidden" name="id" id="productId" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Não <i class="bi bi-x-lg"></i></button>
                    <submit-button class="btn btn-danger" icon="bi bi-exclamation-triangle" text="Sim"></submit-button>
                </form>
            </div>
        </div>
    </div>
</div>
