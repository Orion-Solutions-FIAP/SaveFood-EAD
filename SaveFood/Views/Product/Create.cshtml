@model Product
@{
    ViewData["Title"] = "Create Product";
}

<asp:Content ID="HeaderContent" runat="server" ContentPlaceHolderID="HeadContent">
    <link rel="stylesheet" href="~/css/product.css" />
</asp:Content>

<message text="@TempData["msg"]"></message>

<form asp-action="Create">
    <div class="form-row form">
        <div class="card">
            <div class="card-body">
                <h1 class="title">Cadastro de Produto</h1>
                <partial name="_Form" />
                <div class="form-inline btn-inline">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-cancel">Cancelar</a>
                    <input type="submit" value="Cadastrar" class="btn btn-create" />
                </div>
            </div>
        </div>
        <div class="img">
            <img src="~/img/product/product-create.png" alt="img-create-product" id="img-create-product" />
        </div>
    </div>
</form>
